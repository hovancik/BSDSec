<div id="articles">
  <% @articles.each do |article| %>
    <h2>
      <small><%= art_date(article.created_at) %></small>
      <%= link_to art_title(article.title), article_path(article) %>
      <% article.tags.each do |tag| %>
        <small><i><%= link_to tag.name, tag_path(tag) %></i></small>
      <% end %>
    </h2>
  <% end %>
  <%= paginate @articles %>
</div>
